rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow users to read and write only their own data
      match /meta/tree_index {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /trees/{treeId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
